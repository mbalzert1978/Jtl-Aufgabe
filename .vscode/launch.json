    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch JtlTask.WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/JtlTask.WebApi/bin/Debug/net8.0/JtlTask.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/JtlTask.WebApi",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            }
        },
        {
            "name": "Docker Compose: Launch",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "docker-compose",
            "runtimeArgs": [
                "up",
                "--build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "postDebugTask": "docker-compose-down",
            "serverReadyAction": {
                "pattern": "jtltask-web-api.*Now listening on:\\s+(http://[^:]+:\\d+)",
                "uriFormat": "http://localhost:5050/swagger",
                "action": "openExternally"
            }
        },
        {
            "name": "Attach to JtlTask.WebApi",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Docker Compose: Full",
            "configurations": ["Docker Compose: Launch"],
            "stopAll": true
        }
    ]
}